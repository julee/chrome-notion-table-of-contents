{
  "version": "2.1.3",
  "license": "MIT",
  "scripts": {
    "dev": "yarn run clean; vite",
    "build": "yarn run clean; vite build",
    "clean": "rimraf dist out.zip;",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint-fix:eslint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "lint:prettier": "prettier --check .",
    "lint-fix:prettier": "prettier --write .",
    "lint:stylelint": "stylelint './src/**/*.pcss'",
    "lint-fix:stylelint": "stylelint --fix './src/**/*.pcss'",
    "lint": "run-p -c lint:*",
    "lint-fix": "run-p -c lint-fix:*",
    "test": "jest",
    "release": "yarn install && yarn run build && zip -r out.zip public",
    "check:types": "tsc --noEmit",
    "check:ngword": "if grep -rE \"console\\.(log|dir)|FIXME\" ./src; then exit 1; else echo \"All good\"; fi",
    "check": "run-p -c test lint check:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chibat/chrome-extension-typescript-starter.git"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "throttle-debounce": "https://github.com/Cside/throttle-debounce"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@types/chrome": "0.0.212",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.10.1",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-csstree-validator": "^2.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "stylelint-no-unsupported-browser-features": "^6.0.1",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "vite": "^4.1.1"
  }
}
